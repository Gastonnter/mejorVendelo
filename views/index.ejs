<%- include("./partials/head", {pageTitle: "Inicio" , stylesheet: "index.css" }) %>

    <%- include("./partials/header", {logueado: logueado})%>
        <main>
            <div id="carrusel-contenido">
                <div id="carrusel-caja">
                    <div class="carrusel-elemento">
                        <img class="imagenes" src="images/carrusel1.png">
                    </div>
                    <div class="carrusel-elemento">
                        <img class="imagenes" src="images/carrusel2.png">
                    </div>
                    <div class="carrusel-elemento">
                        <img class="imagenes" src="images/carrusel3.png">
                    </div>
                </div>
            </div>

            <h2 class="tituloSeccion">Prestá atención a nuestra promociones de este mes!</h2>
            
            <section class="promociones"> 
                <% products.forEach( product=> { %>
                    <a href="products/detail/<%= product.id %>">
                        <div class="articulo">
                            <h1 class="nombre">
                                <%= product.name %>
                            </h1>
                            <p class="imagenArticulo"><img src="/images/<%= product.image %>" alt="prenda1"></p>
            
                            <p class="precio">$<%= product.price%>
                            </p>
                            
                            <p class="precio">Condicion: <%= product.condition%></p>

                            <p class="precio">Marca: <%= product.brand%></p>
                            
                        </div>
                    </a>
                    <%}) %>

            </section>
        </main>

        <%- include("./partials/footer") %>